      "border": {
        "light": "#e5e7eb",
        "medium": "#d1d5db",
        "dark": "#9ca3af",
        "focus": "#0ea5e9"
      }
    },
    
    "typography": {
      "fontFamily": {
        "primary": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif",
        "mono": "'Courier New', Courier, monospace",
        "heading": "'Inter', -apple-system, BlinkMacSystemFont, sans-serif"
      },
      "fontSize": {
        "xs": "0.75rem",
        "sm": "0.875rem",
        "base": "1rem",
        "lg": "1.125rem",
        "xl": "1.25rem",
        "2xl": "1.5rem",
        "3xl": "1.875rem",
        "4xl": "2.25rem",
        "5xl": "3rem"
      },
      "fontWeight": {
        "light": 300,
        "normal": 400,
        "medium": 500,
        "semibold": 600,
        "bold": 700,
        "extrabold": 800
      },
      "lineHeight": {
        "tight": 1.25,
        "normal": 1.5,
        "relaxed": 1.75,
        "loose": 2
      },
      "letterSpacing": {
        "tight": "-0.025em",
        "normal": "0",
        "wide": "0.025em",
        "wider": "0.05em"
      }
    },
    
    "spacing": {
      "0": "0",
      "1": "0.25rem",
      "2": "0.5rem",
      "3": "0.75rem",
      "4": "1rem",
      "5": "1.25rem",
      "6": "1.5rem",
      "8": "2rem",
      "10": "2.5rem",
      "12": "3rem",
      "16": "4rem",
      "20": "5rem",
      "24": "6rem"
    },
    
    "borderRadius": {
      "none": "0",
      "sm": "0.25rem",
      "md": "0.375rem",
      "lg": "0.5rem",
      "xl": "0.75rem",
      "2xl": "1rem",
      "3xl": "1.5rem",
      "full": "9999px"
    },
    
    "shadows": {
      "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
      "base": "0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px -1px rgba(0, 0, 0, 0.1)",
      "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -2px rgba(0, 0, 0, 0.1)",
      "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -4px rgba(0, 0, 0, 0.1)",
      "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 8px 10px -6px rgba(0, 0, 0, 0.1)",
      "2xl": "0 25px 50px -12px rgba(0, 0, 0, 0.25)",
      "inner": "inset 0 2px 4px 0 rgba(0, 0, 0, 0.05)"
    },
    
    "transitions": {
      "fast": "150ms cubic-bezier(0.4, 0, 0.2, 1)",
      "base": "200ms cubic-bezier(0.4, 0, 0.2, 1)",
      "slow": "300ms cubic-bezier(0.4, 0, 0.2, 1)",
      "bounce": "500ms cubic-bezier(0.68, -0.55, 0.265, 1.55)"
    },
    
    "breakpoints": {
      "sm": "640px",
      "md": "768px",
      "lg": "1024px",
      "xl": "1280px",
      "2xl": "1536px"
    },
    
    "zIndex": {
      "dropdown": 1000,
      "sticky": 1020,
      "fixed": 1030,
      "modalBackdrop": 1040,
      "modal": 1050,
      "popover": 1060,
      "tooltip": 1070
    }
  },
  
  "components": {
    "Button": {
      "description": "Componente de botón con múltiples variantes y estados",
      "variants": {
        "primary": {
          "default": {
            "backgroundColor": "tokens.colors.primary.500",
            "color": "tokens.colors.text.inverse",
            "border": "none",
            "padding": "tokens.spacing.3 tokens.spacing.6",
            "borderRadius": "tokens.borderRadius.md",
            "fontSize": "tokens.typography.fontSize.base",
            "fontWeight": "tokens.typography.fontWeight.medium",
            "cursor": "pointer",
            "transition": "tokens.transitions.base",
            "boxShadow": "tokens.shadows.sm"
          },
          "hover": {
            "backgroundColor": "tokens.colors.primary.600",
            "boxShadow": "tokens.shadows.md",
            "transform": "translateY(-1px)"
          },
          "active": {
            "backgroundColor": "tokens.colors.primary.700",
            "transform": "translateY(0)"
          },
          "disabled": {
            "backgroundColor": "tokens.colors.neutral.300",
            "color": "tokens.colors.text.disabled",
            "cursor": "not-allowed",
            "opacity": "0.6"
          },
          "focus": {
            "outline": "2px solid tokens.colors.primary.500",
            "outlineOffset": "2px"
          }
        },
        "secondary": {
          "default": {
            "backgroundColor": "transparent",
            "color": "tokens.colors.primary.600",
            "border": "2px solid tokens.colors.primary.500",
            "padding": "tokens.spacing.3 tokens.spacing.6",
            "borderRadius": "tokens.borderRadius.md",
            "fontSize": "tokens.typography.fontSize.base",
            "fontWeight": "tokens.typography.fontWeight.medium",
            "cursor": "pointer",
            "transition": "tokens.transitions.base"
          },
          "hover": {
            "backgroundColor": "tokens.colors.primary.50",
            "borderColor": "tokens.colors.primary.600"
          },
          "active": {
            "backgroundColor": "tokens.colors.primary.100"
          },
          "disabled": {
            "borderColor": "tokens.colors.neutral.300",
            "color": "tokens.colors.text.disabled",
            "cursor": "not-allowed",
            "opacity": "0.6"
          }
        },
        "ghost": {
          "default": {
            "backgroundColor": "transparent",
            "color": "tokens.colors.text.primary",
            "border": "none",
            "padding": "tokens.spacing.3 tokens.spacing.6",
            "borderRadius": "tokens.borderRadius.md",
            "fontSize": "tokens.typography.fontSize.base",
            "fontWeight": "tokens.typography.fontWeight.medium",
            "cursor": "pointer",
            "transition": "tokens.transitions.base"
          },
          "hover": {
            "backgroundColor": "tokens.colors.neutral.100"
          },
          "active": {
            "backgroundColor": "tokens.colors.neutral.200"
          }
        },
        "danger": {
          "default": {
            "backgroundColor": "tokens.colors.semantic.error.main",
            "color": "tokens.colors.text.inverse",
            "border": "none",
            "padding": "tokens.spacing.3 tokens.spacing.6",
            "borderRadius": "tokens.borderRadius.md",
            "fontSize": "tokens.typography.fontSize.base",
            "fontWeight": "tokens.typography.fontWeight.medium",
            "cursor": "pointer",
            "transition": "tokens.transitions.base"
          },
          "hover": {
            "backgroundColor": "tokens.colors.semantic.error.dark"
          }
        }
      },
      "sizes": {
        "sm": {
          "padding": "tokens.spacing.2 tokens.spacing.4",
          "fontSize": "tokens.typography.fontSize.sm"
        },
        "md": {
          "padding": "tokens.spacing.3 tokens.spacing.6",
          "fontSize": "tokens.typography.fontSize.base"
        },
        "lg": {
          "padding": "tokens.spacing.4 tokens.spacing.8",
          "fontSize": "tokens.typography.fontSize.lg"
        }
      }
    },
    
    "Input": {
      "description": "Campo de entrada de texto con validación y estados",
      "default": {
        "width": "100%",
        "padding": "tokens.spacing.3 tokens.spacing.4",
        "fontSize": "tokens.typography.fontSize.base",
        "lineHeight": "tokens.typography.lineHeight.normal",
        "color": "tokens.colors.text.primary",
        "backgroundColor": "tokens.colors.background.primary",
        "border": "1px solid tokens.colors.border.medium",
        "borderRadius": "tokens.borderRadius.md",
        "transition": "tokens.transitions.base",
        "outline": "none"
      },
      "states": {
        "hover": {
          "borderColor": "tokens.colors.border.dark"
        },
        "focus": {
          "borderColor": "tokens.colors.border.focus",
          "boxShadow": "0 0 0 3px rgba(14, 165, 233, 0.1)"
        },
        "error": {
          "borderColor": "tokens.colors.semantic.error.main",
          "boxShadow": "0 0 0 3px rgba(239, 68, 68, 0.1)"
        },
        "success": {
          "borderColor": "tokens.colors.semantic.success.main",
          "boxShadow": "0 0 0 3px rgba(34, 197, 94, 0.1)"
        },
        "disabled": {
          "backgroundColor": "tokens.colors.neutral.100",
          "color": "tokens.colors.text.disabled",
          "cursor": "not-allowed",
          "opacity": "0.6"
        }
      },
      "variants": {
        "outline": "default",
        "filled": {
          "backgroundColor": "tokens.colors.neutral.100",
          "border": "1px solid transparent"
        }
      }
    },
    
    "Card": {
      "description": "Contenedor con elevación para agrupar contenido",
      "default": {
        "backgroundColor": "tokens.colors.background.primary",
        "borderRadius": "tokens.borderRadius.lg",
        "padding": "tokens.spacing.6",
        "boxShadow": "tokens.shadows.base",
        "border": "1px solid tokens.colors.border.light",
        "transition": "tokens.transitions.base"
      },
      "variants": {
        "elevated": {
          "boxShadow": "tokens.shadows.lg",
          "border": "none"
        },
        "outlined": {
          "boxShadow": "none",
          "border": "2px solid tokens.colors.border.medium"
        },
        "flat": {
          "boxShadow": "none",
          "border": "none",
          "backgroundColor": "tokens.colors.background.secondary"
        }
      },
      "states": {
        "hover": {
          "boxShadow": "tokens.shadows.md",
          "transform": "translateY(-2px)"
        }
      }
    },
    
    "Modal": {
      "description": "Diálogo modal superpuesto",
      "backdrop": {
        "position": "fixed",
        "inset": "0",
        "backgroundColor": "tokens.colors.background.overlay",
        "zIndex": "tokens.zIndex.modalBackdrop",
        "display": "flex",
        "alignItems": "center",
        "justifyContent": "center",
        "animation": "fadeIn tokens.transitions.base"
      },
      "container": {
        "backgroundColor": "tokens.colors.background.primary",
        "borderRadius": "tokens.borderRadius.xl",
        "padding": "tokens.spacing.8",
        "maxWidth": "600px",
        "width": "90%",
        "maxHeight": "90vh",
        "overflowY": "auto",
        "boxShadow": "tokens.shadows.2xl",
        "zIndex": "tokens.zIndex.modal",
        "animation": "slideUp tokens.transitions.slow"
      },
      "header": {
        "fontSize": "tokens.typography.fontSize.2xl",
        "fontWeight": "tokens.typography.fontWeight.bold",
        "marginBottom": "tokens.spacing.4",
        "color": "tokens.colors.text.primary"
      },
      "body": {
        "fontSize": "tokens.typography.fontSize.base",
        "color": "tokens.colors.text.secondary",
        "marginBottom": "tokens.spacing.6"
      },
      "footer": {
        "display": "flex",
        "gap": "tokens.spacing.3",
        "justifyContent": "flex-end"
      }
    },
    
    "Alert": {
      "description": "Componente para mensajes de notificación",
      "base": {
        "padding": "tokens.spacing.4",
        "borderRadius": "tokens.borderRadius.lg",
        "fontSize": "tokens.typography.fontSize.base",
        "fontWeight": "tokens.typography.fontWeight.medium",
        "display": "flex",
        "alignItems": "flex-start",
        "gap": "tokens.spacing.3"
      },
      "variants": {
        "success": {
          "backgroundColor": "tokens.colors.semantic.success.bg",
          "color": "tokens.colors.semantic.success.dark",
          "borderLeft": "4px solid tokens.colors.semantic.success.main"
        },
        "error": {
          "backgroundColor": "tokens.colors.semantic.error.bg",
          "color": "tokens.colors.semantic.error.dark",
          "borderLeft": "4px solid tokens.colors.semantic.error.main"
        },
        "warning": {
          "backgroundColor": "tokens.colors.semantic.warning.bg",
          "color": "tokens.colors.semantic.warning.dark",
          "borderLeft": "4px solid tokens.colors.semantic.warning.main"
        },
        "info": {
          "backgroundColor": "tokens.colors.semantic.info.bg",
          "color": "tokens.colors.semantic.info.dark",
          "borderLeft": "4px solid tokens.colors.semantic.info.main"
        }
      }
    },
    
    "Badge": {
      "description": "Etiqueta pequeña para indicadores",
      "base": {
        "display": "inline-flex",
        "alignItems": "center",
        "padding": "tokens.spacing.1 tokens.spacing.3",
        "fontSize": "tokens.typography.fontSize.xs",
        "fontWeight": "tokens.typography.fontWeight.semibold",
        "borderRadius": "tokens.borderRadius.full",
        "textTransform": "uppercase",
        "letterSpacing": "tokens.typography.letterSpacing.wide"
      },
      "variants": {
        "primary": {
          "backgroundColor": "tokens.colors.primary.100",
          "color": "tokens.colors.primary.700"
        },
        "success": {
          "backgroundColor": "tokens.colors.semantic.success.bg",
          "color": "tokens.colors.semantic.success.dark"
        },
        "error": {
          "backgroundColor": "tokens.colors.semantic.error.bg",
          "color": "tokens.colors.semantic.error.dark"
        },
        "warning": {
          "backgroundColor": "tokens.colors.semantic.warning.bg",
          "color": "tokens.colors.semantic.warning.dark"
        },
        "neutral": {
          "backgroundColor": "tokens.colors.neutral.200",
          "color": "tokens.colors.neutral.700"
        }
      }
    },
    
    "Tooltip": {
      "description": "Información contextual al pasar el cursor",
      "container": {
        "backgroundColor": "tokens.colors.neutral.900",
        "color": "tokens.colors.text.inverse",
        "padding": "tokens.spacing.2 tokens.spacing.3",
        "borderRadius": "tokens.borderRadius.md",
        "fontSize": "tokens.typography.fontSize.sm",
        "boxShadow": "tokens.shadows.lg",
        "zIndex": "tokens.zIndex.tooltip",
        "maxWidth": "300px",
        "animation": "fadeIn tokens.transitions.fast"
      }
    },
    
    "Spinner": {
      "description": "Indicador de carga",
      "default": {
        "width": "40px",
        "height": "40px",
        "border": "4px solid tokens.colors.neutral.200",
        "borderTopColor": "tokens.colors.primary.500",
        "borderRadius": "tokens.borderRadius.full",
        "animation": "spin 1s linear infinite"
      },
      "sizes": {
        "sm": {
          "width": "20px",
          "height": "20px",
          "border": "2px solid"
        },
        "md": {
          "width": "40px",
          "height": "40px",
          "border": "4px solid"
        },
        "lg": {
          "width": "60px",
          "height": "60px",
          "border": "6px solid"
        }
      }
    },
    
    "Checkbox": {
      "description": "Casilla de verificación",
      "container": {
        "display": "inline-flex",
        "alignItems": "center",
        "gap": "tokens.spacing.2",
        "cursor": "pointer"
      },
      "input": {
        "width": "20px",
        "height": "20px",
        "border": "2px solid tokens.colors.border.medium",
        "borderRadius": "tokens.borderRadius.sm",
        "backgroundColor": "tokens.colors.background.primary",
        "cursor": "pointer",
        "transition": "tokens.transitions.base"
      },
      "states": {
        "checked": {
          "backgroundColor": "tokens.colors.primary.500",
          "borderColor": "tokens.colors.primary.500"
        },
        "hover": {
          "borderColor": "tokens.colors.primary.400"
        },
        "focus": {
          "outline": "2px solid tokens.colors.primary.500",
          "outlineOffset": "2px"
        },
        "disabled": {
          "opacity": "0.5",
          "cursor": "not-allowed"
        }
      }
    },
    
    "Select": {
      "description": "Menú desplegable de selección",
      "container": {
        "position": "relative",
        "width": "100%"
      },
      "trigger": {
        "width": "100%",
        "padding": "tokens.spacing.3 tokens.spacing.4",
        "fontSize": "tokens.typography.fontSize.base",
        "color": "tokens.colors.text.primary",
        "backgroundColor": "tokens.colors.background.primary",
        "border": "1px solid tokens.colors.border.medium",
        "borderRadius": "tokens.borderRadius.md",
        "cursor": "pointer",
        "display": "flex",
        "alignItems": "center",
        "justifyContent": "space-between",
        "transition": "tokens.transitions.base"
      },
      "dropdown": {
        "position": "absolute",
        "top": "calc(100% + 4px)",
        "left": "0",
        "right": "0",
        "backgroundColor": "tokens.colors.background.primary",
        "border": "1px solid tokens.colors.border.light",
        "borderRadius": "tokens.borderRadius.md",
        "boxShadow": "tokens.shadows.lg",
        "maxHeight": "300px",
        "overflowY": "auto",
        "zIndex": "tokens.zIndex.dropdown"
      },
      "option": {
        "padding": "tokens.spacing.3 tokens.spacing.4",
        "cursor": "pointer",
        "transition": "tokens.transitions.fast"
      },
      "optionHover": {
        "backgroundColor": "tokens.colors.primary.50"
      },
      "optionSelected": {
        "backgroundColor": "tokens.colors.primary.100",
        "color": "tokens.colors.primary.700",
        "fontWeight": "tokens.typography.fontWeight.medium"
      }
    }
  },
  
  "patterns": {
    "layout": {
      "container": {
        "maxWidth": "1280px",
        "margin": "0 auto",
        "padding": "0 tokens.spacing.4"
      },
      "grid": {
        "display": "grid",
        "gap": "tokens.spacing.6",
        "gridTemplateColumns": {
          "default": "1fr",
          "sm": "repeat(2, 1fr)",
          "md": "repeat(3, 1fr)",
          "lg": "repeat(4, 1fr)"
        }
      },
      "flex": {
        "display": "flex",
        "gap": "tokens.spacing.4"
      },
      "section": {
        "padding": "tokens.spacing.16 0"
      }
    },
    
    "navigation": {
      "header": {
        "height": "64px",
        "backgroundColor": "tokens.colors.background.primary",
        "boxShadow": "tokens.shadows.sm",
        "position": "sticky",
        "top": "0",
        "zIndex": "tokens.zIndex.sticky"
      },
      "sidebar": {
        "width": "280px",
        "backgroundColor": "tokens.colors.background.secondary",
        "height": "100vh",
        "position": "fixed",
        "left": "0",
        "top": "0",
        "padding": "tokens.spacing.6",
        "overflowY": "auto"
      }
    },
    
    "forms": {
      "formGroup": {
        "marginBottom": "tokens.spacing.6"
      },
      "label": {
        "display": "block",
        "marginBottom": "tokens.spacing.2",
        "fontSize": "tokens.typography.fontSize.sm",
        "fontWeight": "tokens.typography.fontWeight.medium",
        "color": "tokens.colors.text.primary"
      },
      "helperText": {
        "marginTop": "tokens.spacing.2",
        "fontSize": "tokens.typography.fontSize.sm",
        "color": "tokens.colors.text.secondary"
      },
      "errorText": {
        "marginTop": "tokens.spacing.2",
        "fontSize": "tokens.typography.fontSize.sm",
        "color": "tokens.colors.semantic.error.main"
      }
    }
  },
  
  "animations": {
    "fadeIn": {
      "keyframes": {
        "0%": { "opacity": "0" },
        "100%": { "opacity": "1" }
      },
      "duration": "tokens.transitions.base"
    },
    "fadeOut": {
      "keyframes": {
        "0%": { "opacity": "1" },
        "100%": { "opacity": "0" }
      },
      "duration": "tokens.transitions.base"
    },
    "slideUp": {
      "keyframes": {
        "0%": { "transform": "translateY(20px)", "opacity": "0" },
        "100%": { "transform": "translateY(0)", "opacity": "1" }
      },
      "duration": "tokens.transitions.slow"
    },
    "slideDown": {
      "keyframes": {
        "0%": { "transform": "translateY(-20px)", "opacity": "0" },
        "100%": { "transform": "translateY(0)", "opacity": "1" }
      },
      "duration": "tokens.transitions.slow"
    },
    "spin": {
      "keyframes": {
        "0%": { "transform": "rotate(0deg)" },
        "100%": { "transform": "rotate(360deg)" }
      },
      "duration": "1s",
      "timingFunction": "linear",
      "iterationCount": "infinite"
    },
    "bounce": {
      "keyframes": {
        "0%, 100%": { "transform": "translateY(0)" },
        "50%": { "transform": "translateY(-10px)" }
      },
      "duration": "tokens.transitions.bounce"
    }
  },
  
  "guidelines": {
    "accessibility": {
      "description": "Directrices para garantizar accesibilidad WCAG 2.1 AA",
