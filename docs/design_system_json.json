{
  "metadata": {
    "name": "Sistema de Diseño Aplicación",
    "version": "1.0.0",
    "lastUpdated": "2025-11-18",
    "description": "Sistema de diseño completo para mantener consistencia visual y funcional en toda la aplicación"
  },
  
  "tokens": {
    "colors": {
      "primary": {
        "50": "#f0f9ff",
        "100": "#e0f2fe",
        "200": "#bae6fd",
        "300": "#7dd3fc",
        "400": "#38bdf8",
        "500": "#0ea5e9",
        "600": "#0284c7",
        "700": "#0369a1",
        "800": "#075985",
        "900": "#0c4a6e",
        "default": "#0ea5e9"
      },
      "secondary": {
        "50": "#faf5ff",
        "100": "#f3e8ff",
        "200": "#e9d5ff",
        "300": "#d8b4fe",
        "400": "#c084fc",
        "500": "#a855f7",
        "600": "#9333ea",
        "700": "#7e22ce",
        "800": "#6b21a8",
        "900": "#581c87",
        "default": "#a855f7"
      },
      "neutral": {
        "50": "#fafafa",
        "100": "#f5f5f5",
        "200": "#e5e5e5",
        "300": "#d4d4d4",
        "400": "#a3a3a3",
        "500": "#737373",
        "600": "#525252",
        "700": "#404040",
        "800": "#262626",
        "900": "#171717",
        "950": "#0a0a0a"
      },
      "semantic": {
        "success": {
          "light": "#86efac",
          "main": "#22c55e",
          "dark": "#15803d",
          "bg": "#f0fdf4"
        },
        "error": {
          "light": "#fca5a5",
          "main": "#ef4444",
          "dark": "#b91c1c",
          "bg": "#fef2f2"
        },
        "warning": {
          "light": "#fcd34d",
          "main": "#f59e0b",
          "dark": "#d97706",
          "bg": "#fffbeb"
        },
        "info": {
          "light": "#93c5fd",
          "main": "#3b82f6",
          "dark": "#1d4ed8",
