import React, { useState } from 'react';

// Simulaci√≥n de imports
const Button = ({ children, variant = 'primary', size = 'md', onClick, ...props }: any) => (
  <button
    onClick={onClick}
    style={{
      padding: size === 'lg' ? '0.75rem 1.5rem' : '0.5rem 1rem',
      background: variant === 'primary' ? '#6b7df6' : variant === 'secondary' ? 'transparent' : '#ef4444',
      color: variant === 'secondary' ? '#fff' : '#fff',
      border: variant === 'secondary' ? '1px solid #c5d1cb' : 'none',
      borderRadius: '0.625rem',
      fontSize: size === 'lg' ? '1.125rem' : '1rem',
      fontWeight: 500,
      cursor: 'pointer',
      transition: 'all 0.15s'
    }}
    {...props}
  >
    {children}
  </button>
);

const Card = ({ children, variant = 'elevated', ...props }: any) => (
  <div
    style={{
      background: '#152419',
      borderRadius: '0.75rem',
      padding: '1.5rem',
      boxShadow: variant === 'elevated' ? '0 10px 15px -3px rgba(0, 0, 0, 0.1)' : 'none',
      border: '1px solid rgba(160, 179, 168, 0.2)'
    }}
    {...props}
  >
    {children}
  </div>
);

